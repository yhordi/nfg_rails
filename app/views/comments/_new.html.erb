<%= form_for [@post, @post.comments.build] do |f| %>
  <%= f.label "Your Name" %>
  <% if session[:id] != nil %>
    <%= f.text_field :name, value: "#{session[:username].titleize} Force" %>
  <% else %>
    <%= f.text_field :name %>
    <% end %>
  <%= f.label "Your Comment" %>
  <%= f.text_area :body, size: "60x12" %>
  <%= f.submit %>
<% end %>