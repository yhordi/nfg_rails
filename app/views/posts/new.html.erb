<% if flash[:error] %>
    <% flash[:error].each do |error| %>
    <p class="error">
      <%= error %>
    </p>
  <% end %>
<% end %>
<%= form_for @post do |f| %>
  Post Title: <%= f.text_field :title, placeholder: "title" %>
  Author: <%= session[:username].titleize + " Force"%>
  <br></br>
  Post Body: <%= f.text_area :body, :cols => "60", :rows => "10", placeholder: "body", :class => "tinymce" %>
  <%= f.submit "create" %>
<% end %>
