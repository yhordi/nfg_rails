<% @posts.each do |post| %>
  <div class="col left">
    <h1 class="headline">
      <%= post.title %>
    </h1>
    <h4 >
      by: <%= post.author %>
    </h4>
    <p class="article">
      <%= post.body %>
    </p>
    <div>
      <% if session[:user_id] %>
        <%= link_to "Edit |" %>
        <%= link_to " Delete" %>
      <% end %>
    </div>
    <p class="footer divider">
      <%= post.created_at %>
    </p>
  </div>
<% end %>